\begin{tikzpicture}[
  >=stealth,
  declare function={
    normal(\m,\s) = 1/(2*\s*sqrt(pi))*exp(-(x-\m)^2/(2*\s^2));
  },
  declare function={
    reg(\x,\a,\b)=\a+\b*\x;
  }
]

\begin{axis}[
  width=9cm,
  height=7cm,
  view={45}{50},
  xlabel=$x$: preditora,
  ylabel=$y$: resposta,
  zlabel=densidade,
  xlabel style={rotate=-25},
  ylabel style={rotate=25},
  zlabel style={rotate=0},
  samples=60,
  domain=-4:12,
  % title=Regress\~{a}o linear simples,
  % grid=both,
  % minor tick num=2,
  % xtick={1,3,5,7},
  % xticklabel=\empty,
  xtick=\empty,
  ztick=\empty,
  ytick=\empty,
  samples y=0,
  zmin=0,
  area plot/.style={
    fill opacity=0.5,
    draw=none,
    fill=darkgreen,
    mark=none,
